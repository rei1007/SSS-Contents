<body>
    <main id="container">
        <div id="current_time_wrap">
            <h1>現在時刻：</h1>
            <div id="current_time">00:00:00</div>
        </div>

        <hr>

        <div id="timer_wrap">
            <h1>配信時間：</h1>
            <div id="timer">00:00:00</div>
        </div>

        <div id="restart">リセット</div>
    </main>
    <script>
        let startTime;
        let timerInterval;

        function startTimer() {
            const now = new Date();
            const milliseconds = now.getMilliseconds();
            startTime = Date.now() - (localStorage.getItem('elapsedTime') || 0) - milliseconds;
            timerInterval = setInterval(updateTimer, 500);
        }

        function updateTimer() {
            const elapsedTime = Date.now() - startTime;
            localStorage.setItem('elapsedTime', elapsedTime);

            const hours = Math.floor(elapsedTime / 3600000);
            const minutes = Math.floor((elapsedTime % 3600000) / 60000);
            const seconds = Math.floor((elapsedTime % 60000) / 1000);

            const formattedTime = `${pad(hours)}:${pad(minutes)}:${pad(seconds)}`;
            document.getElementById('timer').innerText = formattedTime;
        }

        function updateCurrentTime() {
            const now = new Date();
            const date = now.getDate();
            const month = now.getMonth() + 1;
            const dayNum = now.getDay();
            const dayJP = ['日', '月', '火', '水', '木', '金', '土'];
            const day = dayJP[dayNum];
            const hours = now.getHours();
            const minutes = now.getMinutes();
            //const seconds = now.getSeconds();

            //const formattedTime = `${pad(hours)}:${pad(minutes)}:${pad(seconds)}`;
            const formattedTime = `${pad(hours)}:${pad(minutes)}<span id="date">${month}/${date}<span id="day">(${day})</span></span>`;
            document.getElementById('current_time').innerHTML = formattedTime;
        }

        function pad(number) {
            return (number < 10 ? '0' : '') + number;
        }

        window.onload = () => {
            startTimer();
            setInterval(updateCurrentTime, 1000);
        };

        window.onbeforeunload = () => {
            clearInterval(timerInterval);
        };

        const restartButton = document.getElementById('restart');
        let pausedTime = 0;
        let isRunning = true;

        restartButton.addEventListener('click', () => {
            startTime = Date.now();
            pausedTime = 0;
            updateTimer();
        });
    </script>
</body>
